<p id="notice"><%= notice %></p>

<h1>Products</h1>
<p>Total products: <%= @products.count %>
<table>
  <thead>
    <tr>
      <th>Code</th>
      <th>Name</th>
      <th>Nib size</th>
      <th>Features</th>
      <th>Colors</th>
      <th>Category</th>
      <th>Imgage</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @products.each do |product| %>
      <tr>
        <td><%= product.code %></td>
        <td><%= product.name %></td>
        <td><%= product.nib_size %></td>
        <td><%= product.features %></td>
        <td><% product.colors.each do |color| %>
            <%= color.name %>
            <% end %></td>
        <td><% product.categories.each do |category| %>
            <%= category.name %>
            <% end %></td>
        <td><%= product.items.first.image %></td>
        <td><%= link_to 'Show', product %></td>
        <td><%= link_to 'Edit', edit_product_path(product) %></td>
        <td><%= link_to 'Destroy', product, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Product', new_product_path %>
